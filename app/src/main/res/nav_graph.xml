<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/TaskFragment">

    <fragment
        android:id="@+id/TaskFragment"
        android:name="com.example.recu_app.ui.alerts.tasks.TasksFragment"
        android:label="Tasks"
        tools:layout="@layout/fragment_tasks">

        <action
            android:id="@+id/action_TaskFragment_to_AddEditTaskFragment"
            app:destination="@id/AddEditTaskFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddEditTaskFragment"
        android:name="com.example.recu_app.ui.alerts.addedittask.AddEditFragment"
        android:label=""
        tools:layout="@layout/fragment_add_edit">
        <argument
            android:name="task"
            android:defaultValue="@null"
            app:argType="com.example.recu_app.data.Task"
            app:nullable="true" />
    </fragment>
</navigation>