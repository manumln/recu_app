<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alerts.DetailsAlertFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewAlertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/textViewAlertShortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Short Description"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/textViewAlertLongDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detailed Alert Message"
            android:textSize="16sp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/textViewAlertDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alert Date"
            android:textSize="14sp"
            android:paddingBottom="8dp"/>
    </LinearLayout>
</FrameLayout>
